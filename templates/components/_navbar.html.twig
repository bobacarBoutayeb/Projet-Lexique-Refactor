<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand logo" href="{{ path('lexicon_index') }}"><i class="fas fa-book-open fa-1x light me-1"></i>Lexique</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon "></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav w-100">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <form class="search" action="{{ path('app_search') }}" method="get">
                        <input class="form-control me-2 py-2 flex-fill" type="search" placeholder="Recherche" aria-label="Search" name="terms">
                        <button class="btn btn-outline-success" type="submit">{{ 'navbar.search'|trans }}</button>
                    </form>
                    <li class="nav-item" >
                        <a class="nav-link active " aria-current="page" href="{{ path('lexicon_index') }}">Lexiques</a>
                    </li>
                {% endif %}
                    <li class="nav-item" >
                        <a class="nav-link active " aria-current="page" href="{{ path('about_index') }}">{{ 'navbar.about'|trans }}</a>
                    </li>
                    <li class="nav-item" >
                        <a class="nav-link active" aria-current="page" href="{{ path('contact_index') }}">Contact</a>
                    </li>
                    <li class="nav-item profil">
                        <a class="nav-link active d-flex align-items-center" aria-current="page" href="#">
                            <span class="img-profil me-2"><i class="fas fa-user fa-xs"></i></span>
                            <p class="m-0"> {{ app.user.username }} </p>
                        </a>
                    </li>
                    <li class="nav-item logout">
                        <a class="nav-link active d-flex align-items-center" aria-current="page" href="/logout">
                        {{ 'navbar.disconnect'|trans }}
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="{{ path('user_index') }}" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="img-profil">
                                <i class="fas fa-user fa-xs"></i>
                            </span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item">{{ 'navbar.user.as'|trans }}</a></li>
                            <li><strong class="ps-3"> {{ app.user.username }} </strong></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('register') }}">{{ 'navbar.user.profile'|trans }}</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('lexicon_index') }}">{{ 'navbar.user.lexicons'|trans }}</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class='dropdown-item' href="/logout">{{ 'navbar.disconnect'|trans }}</a></li>
                        </ul>
                    </li>
                        {% else %}
                        <li class="nav-item register">
                            <a class="nav-link active" aria-current="page" href="{{ path('register') }}">{{ 'navbar.register'|trans }}</a>
                        </li>
                        <li class="nav-item login">
                            <a class="nav-link active" aria-current="page" href="{{ path('login') }}">{{ 'navbar.connect'|trans }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>
