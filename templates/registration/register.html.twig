{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block body %}
    <div class="flex-fill bg-light py-5">
        <div class="container">
            <a href="{{ path('home_index') }}"><i class="fas fa-book-open fa-4x d-block text-center mb-4 dark"></i></a>
            <h2 class="title-page">{{ 'register.formtitle'|trans }}</h2>
            <div class="form-app border dark p-5">
                 {{ form_start(registrationForm) }}
                 {{ form_row(registrationForm.username, {row_attr: {class: 'mb-3'}}) }}
                 {{ form_row(registrationForm.email) }}
                 {{ form_row(registrationForm.plainPassword, {
                     label: "Mot de passe"
                 }) }}
                 {{ form_row(registrationForm.agreeTerms) }}

                 <button type="submit" class="btn btn-primary">{{ 'register.button'|trans }}</button>
                 {{ form_end(registrationForm) }}
             </div>
        </div>
    </div>
{% endblock %}
