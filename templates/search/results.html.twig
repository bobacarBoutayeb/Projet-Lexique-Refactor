{% extends 'base.html.twig' %}

{% block title %}Index de mots{% endblock %}

{% block body %}
    {# #Contenu #}
    <h1>Résultats de recherche :</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Mots :</th>
        </tr>
        </thead>
        <tbody>
        {% for returned_word in rows %}
                <tr>
                    <td> <a href="{{ path('word_show', {'id': returned_word.id}) }}"> {{ returned_word.name }}</td>
                </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun résultat trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lexicon_index') }}">Retour à la liste</a>
{% endblock %}
