{% block body %}
    <div>
        <h2>Bienvenue dans ton lexique</h2>
        {% for word in words %}
                  <ul>
                      <li>
                          {{ word.name }}: {{ word.definition }}, {{ word.createdAt|date("D, d M Y h:i:s O") }}
