{% extends 'base.html.twig' %}

{% block title %}Word index{% endblock %}

{% block body %}
    {# #Contenu #}
    <h1>{{ lexicon.title }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
        <tr>
            <th>Mot</th>
            <th>Définition</th>
            <th>Date</th>
            <th>Illustration</th>
        </tr>
        </thead>
        <tbody>
        {% for word in words %}
            <tr>
                <td> <a href="{{ path('word_show', {'id': word.id}) }}">  {{ word.name }}</a></td>
                <td>{% apply markdown_to_html %}{{ word.definition }}{% endapply %}</td>
                <td>{{ word.createdAt|date('Y-m-d H:i:sP') }}</td>
                <td>{% if word.filename %}
                        <img src="{{ vich_uploader_asset(word, 'imageFile') }}" alt="card-img-top" style="width: 20%; height:auto;">
                    {% endif %}</td>
                <td>
                    <a href="{{ path('word_edit', {'id': word.id}) }}">Modifier</a>
                </td>
                <td>
                    {{ include('word/_delete_form.html.twig') }}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('word_new') }}">Ajouter un nouveau mot</a>
    <a href="{{ path('lexicon_index') }}">Retour à la liste</a>
{% endblock %}
