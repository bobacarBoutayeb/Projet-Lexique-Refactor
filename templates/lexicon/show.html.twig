{% extends 'base.html.twig' %}

{% block title %}Lexicon{% endblock %}

{% block body %}
    <a href="{{ path('word_index') }}">Retour à la liste</a>

    <table class="table">
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ lexicon.title }}</td>
        </tr>
        <tr>
            <th>Définition</th>
            <td>{% for word in words %}
        <tr>
            <td> <a href="{{ path('word_show', {'id': word.id}) }}">  {{ word.name }}</a></td>
            <td>{% apply markdown_to_html %}{{ word.definition }}{% endapply %}</td>
            <td>{{ word.createdAt|date('Y-m-d H:i:sP') }}</td>
            <td>{% if word.filename %}
                    <img src="{{ vich_uploader_asset(word, 'imageFile') }}" alt="card-img-top" style="width: 20%; height:auto;">
                {% endif %}</td>
            <td>
                <a href="{{ path('word_edit', {'id': word.id}) }}">edit</a>
            </td>
            <td>
                {{ include('word/_delete_form.html.twig') }}
            </td>

        </tr>
        {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
        {% endfor %}</td>
        </tr>
        <tr>
            <th>Illustration</th>
            <td>
                {% if word.filename %}
                    <img src="{{ vich_uploader_asset(word, 'imageFile') }}" alt="card-img-top" style="width: 20%; height:auto;">
                {% endif %}</td>
        </tr>
        </tbody>
    </table>



