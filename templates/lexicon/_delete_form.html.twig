<form method="post" action="{{ path('lexicon_delete', {'title': lexicon.title}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce Lexique?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lexicon.title) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
